<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.reebrando.myinbox.MesageVerificationActivity"
    android:background="#5fb0c9">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:elevation="15dp"
            android:text="VocÃª recebeu a carta?"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="26sp"
            android:textStyle="bold"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#5fb0c9"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout

            android:layout_width="186dp"
            android:layout_height="194dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginVertical="5dp"
            android:background="#d67601"
            android:orientation="horizontal">

            <ImageButton

                android:id="@+id/btnSim"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/ic_new_mensage" />

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#5fb0c9"
                android:orientation="horizontal"></LinearLayout>

            <ImageButton
                android:id="@+id/btnNao"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/negative" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDepois"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/rounded_button"
            android:text="confirmar depois"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_marginTop="50dp"/>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
